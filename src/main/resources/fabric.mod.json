{
	"schemaVersion": 1,
	"id": "soundboard",
	"version": "${version}",
	"name": "soundboard",
	"description": "Soundboard for Simple Voice Chat that lets you play custom .mp3 sounds in-game.",
	"authors": [
		"Twyco"
	],
	"contact": {
		"sources": "https://github.com/Twyco/soundboard",
		"issues": "https://github.com/Twyco/soundboard/issues"
	},
	"license": "MIT",
	"icon": "assets/soundboard/icon.png",
	"environment": "client",
	"entrypoints": {
		"main": [
			"de.twyco.soundboard.Soundboard"
		],
		"modmenu": [
			"de.twyco.soundboard.modImplementations.modMenu.ModMenuApi"
		],
		"voicechat": [
			"de.twyco.soundboard.modImplementations.simpleVoicechatApi.SimpleVoicechatApi"
		]
	},
	"mixins": [
		"soundboard.mixins.json"
	],
	"depends": {
		"fabricloader": ">=0.17.0",
		"minecraft": "~1.21.10",
		"java": ">=21",
		"fabric-api": "*",
		"cloth-config": ">=20.0.0",
		"voicechat_api": ">=2.6.0"
	},
	"suggests": {
		"modmenu": "*"
	}
}